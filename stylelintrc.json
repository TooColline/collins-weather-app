{
  "extends": "stylelint-config-recommended",
  "plugins": ["stylelint-prettier"],
  "rules": {
    "prettier/prettier": true,
    "indentation": 2,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["tailwind", "apply", "variants", "responsive", "screen"]
      }
    ]
  }
}
